                            <li><a class="dropdown-item" href="#">Cerrar Sesi贸n</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Formulario de Alta -->
    <div class="container mt-4">
        <h1 class="text-center mb-4">Alta de Usuario</h1>
        <form action="/usuario/alta" method="POST" class="shadow p-4 bg-light rounded">
            <!-- ID (Solo lectura) -->
            <div class="mb-3 d-none">
                <label for="id" class="form-label">ID</label>
                <input type="text" id="id" name="id" class="form-control" value="<%= user.id %>" readonly>
            </div>

            <!-- Nombre Completo -->
            <div class="mb-3">
                <label for="name" class="form-label">Nombre Completo</label>
                <input type="text" id="name" name="name" class="form-control" value="<%= user.name %>" readonly>
            </div>
            
            <!-- Email (Solo lectura) -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>" readonly>
            </div>
            
            <!-- Nombre de Pila -->
            <div class="mb-3 d-none">
                <label for="given_name" class="form-label">Nombre</label>
                <input type="text" id="given_name" name="given_name" class="form-control" value="<%= user.given_name %>" readonly>
            </div>
            
            <!-- Apellido -->
            <div class="mb-3 d-none">
                <label for="family_name" class="form-label">Apellido</label>
                <input type="text" id="family_name" name="family_name" class="form-control" value="<%= user.family_name %>" readonly>
            </div>
            
            <!-- Clave -->
            <div class="mb-3">
                <label for="family_name" class="form-label">Clave</label>
                <select class="form-select" id="clave" name="clave" required>
                    <option value="" disabled selected>Buscar...</option>
                    <% claveEscuelas.forEach(escuela => { %>
                        <option value="<%= escuela %>"><%= escuela %></option>
                    <% }); %>
                </select>
            </div>

            <!-- ClaveArticula -->
            <div class="mb-3">
                <label for="family_name" class="form-label">Clave de escuela con la que articula</label>
                <select class="form-select" id="claveArticula" name="claveArticula" required>
                    <option value="" disabled selected>Buscar...</option>
                    <% claveEscuelas.forEach(escuela => { %>
                        <option value="<%= escuela %>"><%= escuela %></option>
                    <% }); %>
                </select>
            </div>

            <!-- Bot贸n de Enviar -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluye Select2 CSS y JS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</body>
</html>

<script>
    // Inicializa Select2 en el elemento select
    $(document).ready(function() {
        $('#clave').select2({
            placeholder: 'Buscar...',
            allowClear: true
        });
        $('#claveArticula').select2({
            placeholder: 'Buscar...',
            allowClear: true
        });
    });
</script>