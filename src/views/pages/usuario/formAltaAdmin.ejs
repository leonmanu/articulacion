<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alta de Usuario Admin</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
</head>
<body>
 
    <!-- Formulario de Alta -->
    <div class="container mt-4">
        <h1 class="text-center mb-4">Alta de Usuario</h1>
        <form action="/usuario/alta" method="POST" class="shadow p-4 bg-light rounded">
            <!-- ID (Solo lectura) -->
            <div class="mb-3 d-none">
                <label for="id" class="form-label">ID</label>
                <input type="text" id="id" name="id" class="form-control" value="<%= user.id %>" readonly>
            </div>

            <!-- Nombre Completo -->
            <div class="mb-3">
                <label for="name" class="form-label">Nombre Completo</label>
                <input type="text" id="name" name="name" class="form-control bg-light fw-light" value="<%= user.name %>" readonly>
            </div>
            
            <!-- Email (Solo lectura) -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control bg-light fw-light" value="<%= user.email %>" readonly>
            </div>
            
            <!-- Nombre de Pila -->
            <div class="mb-3 d-none">
                <label for="given_name" class="form-label">Nombre</label>
                <input type="text" id="given_name" name="given_name" class="form-control" value="<%= user.given_name %>" readonly>
            </div>
            
            <!-- Apellido -->
            <div class="mb-3 d-none">
                <label for="family_name" class="form-label">Apellido</label>
                <input type="text" id="family_name" name="family_name" class="form-control" value="<%= user.family_name %>" readonly>
            </div>
            
            <!-- BotÃ³n de Enviar -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </form>
    </div>
    <%- include('../../partials/footer') %> 
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluye Select2 CSS y JS -->
</body>
</html>
