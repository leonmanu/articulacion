<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/header') %> 
</head>
<body>
    <%- include('../../partials/spinner') %> 
    <%- include('../../partials/navbar') %> 

    <!-- Contenido Principal -->
    <div class="container mt-4">
        <h1 class="text-center text-primary mb-4">Escuelas</h1>
        <table class="table table-striped table-hover">
            <thead class="table-primary text-center">
                <tr>
                    <th>ID</th>
                    <th>DNI</th>
                    <th>Escuela</th>
                    <th>Curso</th>
                    <th>fecha</th>
                    <th>estado</th>
                    <th>fechaEstado</th>
                </tr>
            </thead>
            <tbody>
                <% registros.forEach(registro => { %>
                    <tr>
                        <td class="text-center"><%= registro.id %></td>
                        <td class="text-center"><%= registro.dni %></td>
                        <td class="text-center"><%= registro.escuela %></td>
                        <td class="text-center"><%= registro.curso %></td>
                        <td class="text-center"><%= registro.fecha %></td>
                        <td class="text-center"><%= registro.estado %></td>
                        <td class="text-center"><%= registro.fechaEstado %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <%- include('../../partials/footer') %> 
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
